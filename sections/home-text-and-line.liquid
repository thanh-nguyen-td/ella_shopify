{% style %}
.text-line-container{
    display: flex;justify-content:center;align-items:center;flex-direction: row;width: 100%;
}
.row-line{
    background:#000;width:100%;height: 2px;
}
.row-text{
    padding: 10px;
    width:500px;
    text-align: center;
    font-weight: 600;
    font-size: 20px;
}
{% endstyle %}
<div class="page-width">
    <div class="text-line-container">
        <div class="row-line">.</div>
        <div class="row-text">{{section.settings.title}}</div>
        <div class="row-line">.</div>
    </div>
    <div style="text-align: center;font-size: 13px">
    <a href="{{section.settings.text_link}}" style="color:#000">{{section.settings.text_button}}</a>
    </div>
</div>

{% schema %}
{
    "name":"text and line",
    "tag":"section",
    "settings":[
        {
           "type": "text",
           "id":"title",
           "default":"NEW ARRIVALS",
           "label":"text title"
        },
        {
            "type": "text",
            "id":"text_button",
            "default":"VIEW ALL",
            "label":"text button"
         },
         {
            "type": "url",
            "id":"text_link",
            "label":"link_button"
         }
    ],
   "presets": [
    {
        "name":"text and line"
    }
   ]
}
{% endschema %}