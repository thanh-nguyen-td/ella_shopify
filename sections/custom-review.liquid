<div>
    <h3>{{section.settings.title}}</h3>
    <p>{{section.settings.content}}</p>
   <div>
        <p>{{section.settings.text_button}}</p>
   </div>
</div>
{% schema %}
{
    "name":"Customer Review",
    "tag":"section",
   "settings": [
    {
        "type": "text",
        "id": "title",
        "default": "CUSTOMER REVIEWS",
        "label": "title"
    },
    {
        "type": "text",
        "id": "content",
        "default": "No reviews yet",
        "label": "content"
    },
    {
        "type": "text",
        "id": "text_button",
        "default": "write a review",
        "label": "text button"
    },
    {
        "type": "checkbox",
        "id": "check_button",
        "default":false,
        "label": "check_button"
    }
   ],
    "presets":[
        {
            "name":"Customer Review" 
        }
    ]
}
{% endschema %}